/* pages/index/index.wxss */
.banner-info{
  position:absolute;
  text-align: center;
  bottom: 0;
  color: white;
  align-self: center;
  background-color:black;
  opacity:0.7;
  width: 100%;
}
.bannernum{
  position:absolute;
  right: 0;
  bottom: 0;
}
.banner-info text{
  text-align: center;
}
.bannerBox image{
  width: 100%;
  height: 100%;
}
.banner .box{
  position:absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx;
  color: #fff;
  font-size: 12 rpx;
  text-align: center;
  background: rgba(0, 0, 0, .5);
}

.content{
  padding: 10rpx 0;
  display: flex;
  justify-content: space-between;
}
.content .item{
  flex: 1;
  text-align: center;
  font-size: 30rpx;
}
.content image{
  width: 200rpx;
  height: 120rpx;
}

/*列表信息*/
.list{
  margin: 10rpx;
  border-bottom: 2rpx solid #eeeeee;
  padding-bottom: 10rpx;
}
.title{
  font-size: 28rpx;
  margin-bottom: 8rpx;
}
.wrapper{
  display: flex;
}
.wrapper image{
  width: 220rpx;
  height: 160rpx;
}
.wrapper .info{
  flex: 1;
  height: 160rpx;
  padding-left: 40rpx;
  position: relative;
}
.desc{
  font-size: 22rpx;
  color: #888888;
  text-align: justify;
  display: -webkit-box;
  -webkit-line-clamp: 3;  /* 限制文字显示三行 */
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.readynum{
  position: absolute;
  font-size: 24rpx;
  right: 0;
  bottom: 0;
}
.readynum text{
  color: red;
}

